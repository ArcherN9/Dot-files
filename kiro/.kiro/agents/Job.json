{
  "name": "Job",
  "description": "Agent with Perplexity MCP server for deep research and web search capabilities",
  "mcpServers": {
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  },
  "tools": [
    "read",
    "write",
    "shell",
    "web_search",
    "@perplexity"
  ]
}
