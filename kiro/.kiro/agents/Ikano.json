{
  "name": "Ikano",
  "description": "Agent with Atlassian and ServiceNow MCP servers for Jira, Confluence, Compass, and ServiceNow integration",
  "mcpServers": {
    "atlassian": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.atlassian.com/v1/mcp"]
    },
    "firebase": {
      "command": "npx",
      "args": ["-y", "firebase-tools@latest", "mcp"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  },
  "tools": [
    "read",
    "write",
    "shell",
    "web_search",
    "@atlassian",
    "@firebase",
    "@context7"
  ],
  "allowedTools": [
    "read"
  ]
}
