{
  "name": "Github",
  "description": "GitHub operations agent for repository management, issue tracking, pull request workflows, code search, and user activity monitoring",
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${env:GH_PAT}"
      }
    }
  },
  "tools": [
    "read",
    "write",
    "shell",
    "@github"
  ],
  "allowedTools": [
    "@github/get_me",
    "@github/search_repositories",
    "@github/search_issues",
    "@github/issue_read",
    "web_search"
  ]
}
